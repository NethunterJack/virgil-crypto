        );
    }

    private function check_object_asn1_marshalling_demarshalling($obj, $asn1Base) {
        $obj->fromAsn1($asn1Base);
        $asn1 = $obj->toAsn1();
        $this->assertEquals($asn1Base, $asn1);
    }

    private function check_object_json_marshalling_demarshalling($obj, $jsonBase) {
        $obj->fromJson($jsonBase);
        $json = $obj->toJson();
        $this->assertEquals($jsonBase, $json);
    }
